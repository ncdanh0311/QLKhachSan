<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Admin PMS</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #f4f6f9;
        }

        .sidebar {
            min-height: 100vh;
            background: #2c3e50;
            color: #fff;
        }

            .sidebar a {
                color: #b0b8c5;
                text-decoration: none;
                padding: 12px 20px;
                display: block;
            }

                .sidebar a:hover, .sidebar a.active {
                    background: #34495e;
                    color: #fff;
                    border-left: 4px solid #3498db;
                }

        .content {
            padding: 20px;
        }

        .stat-card {
            border-radius: 10px;
            border: none;
            transition: transform 0.2s;
        }

            .stat-card:hover {
                transform: translateY(-5px);
            }
    </style>
</head>
<body>
    <div class="d-flex">
        <div class="sidebar d-flex flex-column flex-shrink-0 p-3" style="width: 250px;">
            <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <i class="fa-solid fa-hotel fa-2x me-2"></i>
                <span class="fs-4 fw-bold">Admin PMS</span>
            </a>
            <hr>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a href="@Url.Action("SoDoPhong", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "SoDoPhong" ? "active" : "")">
                        <i class="fa-solid fa-border-all me-2"></i>Sơ đồ phòng
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("DanhSachDatPhong", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "DanhSachDatPhong" ? "active" : "")">
                        <i class="fa-solid fa-list-check me-2"></i>Quản lý Đặt phòng
                    </a>
                </li>
                <li>
                    @if (Convert.ToInt32(Session["MaLoaiND"]) <= 2)
                    {
                        <a href="@Url.Action("BaoCao", "Admin")" class="@(ViewContext.RouteData.Values["action"].ToString() == "BaoCao" ? "active" : "")">
                            <i class="fa-solid fa-chart-line me-2"></i>Báo cáo doanh thu
                        </a>
                    }
                </li>
            </ul>
            <hr>
            <div class="dropdown">
                <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="https://ui-avatars.com/api/?name=Admin" alt="" width="32" height="32" class="rounded-circle me-2">
                    <strong>@Session["HoTen"]</strong>
                </a>
                <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                    <li><a class="dropdown-item" href="@Url.Action("DangXuat", "TaiKhoan")">Đăng xuất</a></li>
                </ul>
            </div>
        </div>

        <div class="content flex-grow-1">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>