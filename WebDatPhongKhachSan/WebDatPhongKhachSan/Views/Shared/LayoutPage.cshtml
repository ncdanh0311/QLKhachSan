@{
    Layout = null;
    var title = ViewBag.Title ?? "Booking Clone Team";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title - Booking Clone Team</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <style>
        :root {
            --bg: #f6f8fb;
            --primary: #003b95;
            --primary2: #0057b8;
            --accent: #ffb700;
            --text: #0f172a;
            --muted: #64748b;
            --radius: 18px;
            --shadow: 0 12px 32px rgba(2, 8, 23, .10);
            --ring: 0 0 0 .25rem rgba(0,113,194,.15);
        }

        body {
            background: var(--bg);
            color: var(--text);
        }

        /* ===== TOP NAV ===== */
        .top-nav {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary2) 100%);
            position: sticky;
            top: 0;
            z-index: 1030;
            box-shadow: 0 8px 24px rgba(0,0,0,.12);
        }

        .nav-chip {
            border: 1px solid rgba(255,255,255,.25);
            background: rgba(255,255,255,.10);
            color: #fff;
            border-radius: 999px;
            transition: .15s ease;
        }

            .nav-chip:hover {
                background: rgba(255,255,255,.18);
                transform: translateY(-1px);
                color: #fff;
            }

        .avatar-btn {
            width: 40px;
            height: 40px;
            border-radius: 999px;
            background: rgba(255,255,255,.92);
            border: 0;
            display: grid;
            place-items: center;
            box-shadow: 0 10px 20px rgba(0,0,0,.12);
            transition: .15s ease;
        }

            .avatar-btn:hover {
                transform: translateY(-1px);
            }

        /* ===== DEV NAV ===== */
        .dev-nav {
            background: #003580;
            border-top: 1px solid rgba(255,255,255,.12);
            border-bottom: 1px solid rgba(255,255,255,.10);
        }

            .dev-nav .nav {
                gap: 6px;
                flex-wrap: wrap;
            }

        @@media (max-width: 992px) {
            .dev-nav .nav {
                flex-wrap: nowrap;
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }
        }

        .dev-nav .nav-link {
            color: #e9ecef;
            font-size: .92rem;
            padding: .45rem .8rem;
            border-radius: 999px;
            white-space: nowrap;
            transition: .15s ease;
        }

            .dev-nav .nav-link:hover {
                color: #fff;
                background: rgba(255,255,255,.14);
                transform: translateY(-1px);
            }

        .dev-nav .dropdown-menu {
            border-radius: 14px;
            border: 1px solid rgba(2,8,23,.08);
            box-shadow: 0 12px 30px rgba(2,8,23,.12);
            overflow: hidden;
        }

        .dropdown-item {
            padding: .55rem .9rem;
        }

            .dropdown-item:hover {
                background: rgba(0,113,194,.10);
            }

        /* ===== COMPACT SEARCH BAR ===== */
        .search-wrap {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary2) 100%);
            padding: 18px 0 22px;
        }

        .search-card {
            background: rgba(255,255,255,.98);
            border: 1px solid rgba(255,255,255,.30);
            box-shadow: var(--shadow);
            border-radius: var(--radius);
            padding: 12px;
        }

        .search-title {
            color: #fff;
            font-weight: 900;
            letter-spacing: -.2px;
            margin: 0 0 10px;
        }

        .ctrl {
            border-radius: 14px;
            border: 1px solid rgba(2,8,23,.12);
            padding: .8rem .9rem;
        }

            .ctrl:focus {
                border-color: rgba(0,113,194,.55);
                box-shadow: var(--ring);
            }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                left: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: rgba(2,8,23,.45);
            }

            .input-icon .ctrl {
                padding-left: 40px;
            }

        .btn-search {
            border-radius: 14px;
            font-weight: 900;
            padding: .9rem 1rem;
            background: linear-gradient(135deg, #0071c2 0%, #0b84e3 100%);
            border: 0;
            color: #fff;
            box-shadow: 0 14px 28px rgba(0,113,194,.25);
            transition: .15s ease;
        }

            .btn-search:hover {
                transform: translateY(-1px);
                filter: brightness(1.02);
            }

        main.container-xl {
            padding: 22px 0 26px;
        }

        footer {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary2) 100%);
        }
    </style>
</head>

<body>
    <header>
        <!-- TOP NAV -->
        <nav class="navbar navbar-expand-lg navbar-dark p-3 top-nav">
            <div class="container-xl">
                <a class="navbar-brand text-white fw-bold fs-3" href="@Url.Action("TrangChu","Home")">
                    Booking.com
                    <span class="fs-6 fw-normal badge bg-warning text-dark ms-1">Nhóm 5</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-end" id="mainNav">
                    <div class="d-flex align-items-center flex-wrap gap-2">
                        <button class="btn btn-sm py-2 px-3 nav-chip" type="button">VND</button>
                        <button class="btn btn-sm py-2 px-3 nav-chip" type="button">🇻🇳</button>

                        <!-- ✅ Nút Phòng đã đặt (TOP) -->
                        @if (Session["MaND"] == null)
                        {
                            <a class="btn btn-sm py-2 px-3 nav-chip"
                               href="@Url.Action("DangNhap","TaiKhoan")">
                                <i class="fa-solid fa-receipt me-1"></i> Phòng đã đặt
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-sm py-2 px-3 nav-chip"
                               href="@Url.Action("Index","DatPhong")">
                                <i class="fa-solid fa-receipt me-1"></i> Phòng đã đặt
                            </a>
                        }

                        @if (Session["MaND"] == null)
                        {
                            <a class="btn btn-sm py-2 px-3 nav-chip" href="@Url.Action("DangNhap","TaiKhoan")">Đăng nhập</a>
                            <a class="btn btn-sm py-2 px-3 nav-chip" href="@Url.Action("DangKi","TaiKhoan")">Đăng ký</a>
                        }
                        else
                        {
                            <span class="text-white-75">Xin chào, <b class="text-white">@Session["HoTen"]</b></span>
                            <a class="btn btn-sm py-2 px-3 nav-chip" href="@Url.Action("DangXuat","TaiKhoan")">
                                <i class="fa-solid fa-right-from-bracket me-1"></i> Đăng xuất
                            </a>
                        }

                        <div class="dropdown ms-2">
                            <button class="avatar-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="Tài khoản">
                                <i class="fa-solid fa-user text-primary"></i>
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end">
                                @if (Session["MaND"] == null)
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("DangNhap","TaiKhoan")">
                                            <i class="fa-solid fa-right-to-bracket me-2"></i>Đăng nhập
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("DangKi","TaiKhoan")">
                                            <i class="fa-solid fa-user-plus me-2"></i>Đăng ký
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item" href="@Url.Action("Index","DatPhong")">
                                            <i class="fa-solid fa-receipt me-2"></i>Phòng đã đặt
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" href="@Url.Action("DangXuat","TaiKhoan")">
                                            <i class="fa-solid fa-right-from-bracket me-2"></i>Đăng xuất
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </nav>

        <!-- DEV NAV -->
        <div class="dev-nav">
            <div class="container-xl">
                <ul class="nav py-2">
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/TrangChu"><i class="fa-solid fa-house me-1"></i>Trang chủ</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">👤 Người 1 (Account)</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Account/ManageUsers"><i class="fa-solid fa-users-gear me-2"></i>Quản lý User (Admin)</a></li>
                            <li><a class="dropdown-item" href="/Account/History"><i class="fa-solid fa-clock-rotate-left me-2"></i>Lịch sử hoạt động</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">🔍 Người 2 (Search)</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Hotel/Search"><i class="fa-solid fa-magnifying-glass me-2"></i>Trang tìm kiếm</a></li>
                            <li><a class="dropdown-item" href="/Hotel/Detail/1"><i class="fa-solid fa-hotel me-2"></i>Chi tiết khách sạn (Mẫu)</a></li>
                            <li><a class="dropdown-item" href="/Hotel/Wishlist"><i class="fa-regular fa-heart me-2"></i>Danh sách yêu thích</a></li>
                        </ul>
                    </li>

                    <!-- ✅ Booking Dropdown: thêm "Phòng đã đặt" -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">📅 Người 3 (Booking)</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Booking/Checkout"><i class="fa-solid fa-credit-card me-2"></i>Trang thanh toán</a></li>

                            @if (Session["MaND"] == null)
                            {
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("DangNhap","TaiKhoan")">
                                        <i class="fa-solid fa-receipt me-2"></i>Phòng đã đặt
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Index","DatPhong")">
                                        <i class="fa-solid fa-receipt me-2"></i>Phòng đã đặt
                                    </a>
                                </li>
                            }

                            <li><a class="dropdown-item" href="/Booking/Cancel"><i class="fa-solid fa-ban me-2"></i>Xử lý hủy phòng</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">🏨 Người 4 (Partner)</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Partner/Dashboard"><i class="fa-solid fa-store me-2"></i>Kênh người bán</a></li>
                            <li><a class="dropdown-item" href="/Partner/RoomManager"><i class="fa-solid fa-bed me-2"></i>Quản lý phòng</a></li>
                            <li><a class="dropdown-item" href="/Partner/Promotion"><i class="fa-solid fa-ticket me-2"></i>Mã giảm giá</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button">📊 Người 5 (Admin)</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="/Admin/Dashboard"><i class="fa-solid fa-chart-line me-2"></i>Thống kê doanh thu</a></li>
                            <li><a class="dropdown-item" href="/Review/Index"><i class="fa-solid fa-star me-2"></i>Quản lý đánh giá</a></li>
                            <li><a class="dropdown-item" href="/Admin/ApproveHotel"><i class="fa-solid fa-circle-check me-2"></i>Duyệt khách sạn</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>

        <!-- COMPACT SEARCH -->
        <div class="search-wrap">
            <div class="container-xl">
                <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-2">
                    <h4 class="search-title">Tìm nhanh khách sạn</h4>
                    <div class="text-white-50 small">
                        Gợi ý: nhập thành phố / tên khách sạn / địa điểm
                    </div>
                </div>

                <div class="search-card">
                    <form action="/Hotel/Search" method="get">
                        <div class="row g-2 align-items-end">
                            <div class="col-lg-5 col-12">
                                <label class="form-label fw-bold small mb-1">Bạn muốn đi đâu?</label>
                                <div class="input-icon">
                                    <i class="fa-solid fa-location-dot"></i>
                                    <input class="form-control ctrl" name="location" type="text"
                                           placeholder="Thành phố, khách sạn, địa điểm..." />
                                </div>
                            </div>

                            <div class="col-lg-2 col-6">
                                <label class="form-label fw-bold small mb-1">Nhận phòng</label>
                                <div class="input-icon">
                                    <i class="fa-regular fa-calendar"></i>
                                    <input class="form-control ctrl" name="checkin" type="date" />
                                </div>
                            </div>

                            <div class="col-lg-2 col-6">
                                <label class="form-label fw-bold small mb-1">Trả phòng</label>
                                <div class="input-icon">
                                    <i class="fa-regular fa-calendar-check"></i>
                                    <input class="form-control ctrl" name="checkout" type="date" />
                                </div>
                            </div>

                            <div class="col-lg-3 col-12">
                                <label class="form-label fw-bold small mb-1">Số khách</label>
                                <div class="input-icon">
                                    <i class="fa-solid fa-users"></i>
                                    <select class="form-select ctrl" name="guests">
                                        <option value="1">1 khách</option>
                                        <option value="2" selected>2 khách</option>
                                        <option value="3">3 khách</option>
                                        <option value="4">4 khách</option>
                                        <option value="5">5 khách</option>
                                        <option value="6">6 khách</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-search w-100">
                                    <i class="fa-solid fa-magnifying-glass me-2"></i>Tìm kiếm
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </header>

    <main role="main" class="container-xl">
        @RenderBody()
    </main>

    <footer class="text-white py-4 mt-4">
        <div class="container-xl text-center">
            <p class="mb-0 small">&copy; 2025 Booking.com Clone - Dự án Nhóm 5.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
