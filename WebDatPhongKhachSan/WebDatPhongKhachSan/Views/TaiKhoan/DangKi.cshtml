
@{
    ViewBag.Title = "DangKi";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

@model WebDatPhongKhachSan.Models.RegisterVM
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5" style="max-width:520px;">
    <h3 class="fw-bold text-center mb-4">Đăng ký tài khoản</h3>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false)
        </div>
    }

    @using (Html.BeginForm("DangKi", "TaiKhoan", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label fw-bold">Họ tên</label>
            @Html.TextBoxFor(m => m.HoTen,
                new { @class = "form-control", placeholder = "Nguyễn Văn A" })
            @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "text-danger small" })
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Số điện thoại</label>
            @Html.TextBoxFor(m => m.SoDienThoai,
                new { @class = "form-control", placeholder = "0912345678" })
            @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger small" })
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Email (không bắt buộc)</label>
            @Html.TextBoxFor(m => m.Email,
                new { @class = "form-control", placeholder = "example@gmail.com" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
        </div>

        <hr />

        <div class="mb-3">
            <label class="form-label fw-bold">Tên đăng nhập</label>
            @Html.TextBoxFor(m => m.TenDangNhap,
                new { @class = "form-control", placeholder = "Tên đăng nhập" })
            @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger small" })
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Mật khẩu</label>
            @Html.PasswordFor(m => m.MatKhau,
                new { @class = "form-control", placeholder = "Tối thiểu 6 ký tự" })
            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger small" })
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Nhập lại mật khẩu</label>
            @Html.PasswordFor(m => m.XacNhanMatKhau,
                new { @class = "form-control", placeholder = "Nhập lại mật khẩu" })
            @Html.ValidationMessageFor(m => m.XacNhanMatKhau, "", new { @class = "text-danger small" })
        </div>

        @* Ẩn role – mặc định là Khách hàng *@
        @Html.HiddenFor(m => m.MaLoaiND)

        <button type="submit" class="btn btn-success w-100 fw-bold">
            Đăng ký
        </button>
    }

    <div class="text-center mt-3">
        <span>Đã có tài khoản?</span>
        <a href="@Url.Action("DangNhap","TaiKhoan")" class="fw-bold text-decoration-none">
            Đăng nhập
        </a>
    </div>
</div>
